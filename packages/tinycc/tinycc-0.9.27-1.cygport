CATEGORY=Devel
SRC_URI=https://download.savannah.gnu.org/releases/${PN}/tcc-${PV}.tar.bz2
SRC_DIR=tcc-${PV}
. ${top}/../base.cyg

src_compile() {
    lndirs
    cd ${B}
    prefix=$(__host_prefix)
    cygconf --tccdir=${prefix}/lib/tcc --bindir=${prefix}/bin --docdir=${prefix}/share/doc --libdir=${prefix}/lib
    cygmake
}
