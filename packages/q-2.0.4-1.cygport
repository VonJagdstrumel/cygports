CATEGORY='Text Utils'
GIT_URI=https://github.com/harelba/${PN}.git
GIT_TAG=${PV}
ARCH=noarch
REQUIRES=python27-six
DEPEND='python2 ruby-devel'
. ${top}/../base.cyg

src_compile() {
    cd ${S}
    lndirs
    cd ${B}
    gem install ronn -i gems -n gems/bin --no-user-install
    gems/bin/ronn doc/USAGE.markdown
    mv doc/USAGE doc/q.1
}

src_install() {
    cd ${B}
    dobin bin/q
    doman doc/q.1
}
