#!/usr/bin/env bash

readonly setup=$(mktemp)

if type -P curl
then curl -o "$setup" https://cygwin.com/setup-x86_64.exe
elif type -P wget
then wget -O "$setup" https://cygwin.com/setup-x86_64.exe
else exit 1
fi

"$setup" \
    --local-package-dir "$LOCALAPPDATA/Cygwin" \
    --no-admin \
    --no-shortcuts \
    $(awk '$0 { printf("%s%s", NR==1 ? "--packages " : ",", $0) }') \
    --pubkey https://cygwin.vonjagdstrumel.net/dist/pubring.gpg \
    --quiet-mode \
    --root cygwin \
    --site https://ftp.fau.de/cygwin/ \
    --site https://ftp.lip6.fr/pub/cygwin/ \
    --site https://cygwin.vonjagdstrumel.net/dist/

rm -f "$setup"
