CATEGORY=Private
SUMMARY=${PN}
ARCH=noarch
GIT_URI=https://github.com/niieani/${PN}-framework.git
GIT_TAG=${PV}
inherit git

dir_install() {
    cd "$1"
    dodir "$2"

    find -type d | while read -r i_dir; do
        insinto "$2/$i_dir"

        find "$i_dir" -maxdepth 1 -type f | while read -r i_file; do
            doins "$i_file"
        done
    done
}

src_compile() {
    cd ${S}
    lndirs
}

src_install() {
    cd ${B}
    dir_install lib /usr/lib/bash-oo
}
